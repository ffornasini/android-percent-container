<?xml version="1.0" encoding="utf-8"?>
<com.francescofornasini.percentcontainer.PercentContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/percent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text"
        />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp">

        <com.francescofornasini.quadrant.QuadrantView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:segment_count="12"
            app:segment_height="0.1"
            app:segment_color="@android:color/holo_blue_dark"
            app:segment_width="0.03"
            app:segment_type="edge"
            />

        <com.francescofornasini.quadrant.QuadrantLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sector_count="12"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                app:layout_sector_gravity="center"
                app:layout_sector_center_padding="0.86"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                app:layout_sector_gravity="center"
                app:layout_sector_center_padding="0.86"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                app:layout_sector_gravity="center"
                app:layout_sector_center_padding="0.86"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                app:layout_sector_gravity="center"
                app:layout_sector_center_padding="0.86"
                />


        </com.francescofornasini.quadrant.QuadrantLayout>
    </FrameLayout>


</com.francescofornasini.percentcontainer.PercentContainer>
